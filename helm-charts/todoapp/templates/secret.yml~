  name: {{ .Chart.Name }}-secret
  namespace: {{ .Values.todoapp.namespace }}
type: Opaque
data:
  SECRET_KEY: {{ .Values.todoapp.secrets.SECRET_KEY }}
  DB_NAME: {{ .Values.todoapp.secrets.DB_NAME }}
  DB_USER: {{ .Values.todoapp.secrets.DB_USER }}
  DB_PASSWORD: {{ .Values.todoapp.secrets.DB_PASSWORD }}
  DB_HOST: {{ .Values.todoapp.secrets.DB_HOST }}
